# .NET Analyzer Rules         #
###############################

# CA1031: Do not catch general exception types (needed for DB rollback patterns)
dotnet_diagnostic.CA1031.severity = suggestion

# CA1062: Validate arguments of public methods (Emby framework handles this)
dotnet_diagnostic.CA1062.severity = none

# CA1822: Mark members as static (advisory only)
dotnet_diagnostic.CA1822.severity = suggestion

# CA2007: Do not directly await a Task (not relevant for netstandard2.0 plugin)
dotnet_diagnostic.CA2007.severity = none
